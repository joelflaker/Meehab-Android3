            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/city"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etZipcode"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="@string/zip_code"
                android:inputType="number"
                android:maxLength="5"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <TextView
                android:id="@+id/tvTypeOfMeeting"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center"
                android:hint="@string/type_of_meeting"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <TextView
                android:id="@+id/tvTypeOfFacility"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center"
                android:hint="@string/type_of_facility"
                android:inputType="phone"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etYourRelationshipToMeeting"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Your relationship to the meeting"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <ImageButton
                android:id="@+id/ibSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:src="@drawable/submit_btn_blue" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>