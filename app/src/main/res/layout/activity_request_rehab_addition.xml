<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".RehabAdditionActivity"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        
    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#888888" >

        <ImageView
            android:id="@+id/topMenuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/simple_button_selector"
            android:clickable="true"
            android:paddingBottom="8dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/topCenterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="8dp"
            android:text="Request Add Rehab"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/topRightImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:inputType="phone"
                android:singleLine="true"
                android:text="CONTACT INFORMATION" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLength="30"
                android:hint="Name"
                android:inputType="text"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Phone Number"
                android:maxLength="14"
                android:inputType="phone"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Email"
                android:maxLength="30"
                android:inputType="textEmailAddress"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="left|center_vertical"
                android:inputType="phone"
                android:singleLine="true"
                android:text="REHAB INFORMATION" />

            <EditText
                android:id="@+id/etNameOfRehaab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:maxLength="30"
                android:hint="Name of Rehab"
                android:inputType="text"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <EditText
                android:id="@+id/etWebsite"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Website"
                android:inputType="textUri"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <TextView
                android:id="@+id/tvTypeOfRehabFacility"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/right_arrow"
                android:gravity="center"
                android:hint="Type of Rehab Facility"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/rlOtherRehabFacility"
                android:visibility="gone"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/etOtherRehabFacilities"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:maxLength="30"
                    android:layout_toLeftOf="@+id/ivOtherCross"
                    android:paddingLeft="4dp"
                    android:gravity="center"
                    android:hint="Tap here to write"
                    android:background="@null" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:padding="5dp"
                    android:id="@+id/ivOtherCross"
                    android:src="@drawable/cross_icon" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_divider" />
            </RelativeLayout>

            <EditText
                android:id="@+id/etYourRelationshipToRehab"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Your relationship to the Rehab?"
                android:inputType="text"
                android:maxLength="50"
                android:singleLine="true" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_divider" />

            <ImageButton
                android:id="@+id/ibSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@null"
                android:src="@drawable/submit_btn_blue" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>