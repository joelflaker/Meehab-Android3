<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".RehabsFilterActivity" >

    <RelativeLayout
        android:id="@+id/relativeTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#888888" >

        <ImageButton
            android:id="@+id/ibCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:src="@drawable/cancel_btn_small"
            android:text="" />

        <TextView
            android:id="@+id/topCenterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Filter"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

<!--         <ImageButton -->
<!--             android:id="@+id/ibApply" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_alignParentRight="true" -->
<!--             android:layout_centerVertical="true" -->
<!--             android:background="@null" -->
<!--             android:src="@drawable/apply_btn" -->
<!--             android:text="" -->
<!--             android:layout_marginRight="8dp" -->
<!--             android:textColor="#000" /> -->
        
        <ImageButton
            android:id="@+id/ibClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:src="@drawable/clear_btn"
            android:text=""
            android:textColor="#000" />

        <ImageView
            android:id="@+id/topRightImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="false" />
    </RelativeLayout>
 <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.citrusbits.meehab.MeetingsFilterActivity" >

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btnOpenNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/simple_button_selector"
                    android:gravity="left|center_vertical"
                    android:text="Open Now"
                    android:textColor="#888888" />

                <CheckBox
                    android:id="@+id/tglOpenNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/toggle_selector"
                    android:button="@null"
                    android:checked="false"
                    android:textColor="@android:color/transparent"
                    android:textOff=""
                    android:textOn="" />
            </RelativeLayout>

        <ExpandableListView
            android:id="@+id/expListFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:divider="@null"
            android:scrollbarStyle="outsideOverlay"
            android:dividerHeight="0dp"
            android:groupIndicator="@null" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnZipCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/simple_button_selector"
                android:gravity="left|center_vertical"
                android:text="Zip Code"
                android:textColor="#888888" />

            <EditText
                android:id="@+id/editZipCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|right"
                android:hint="Enter Zip  Code"
                android:inputType="number"
                android:maxLength="5"
                android:singleLine="true"
                android:text=""
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/simple_button_selector"
                android:gravity="left|center_vertical"
                android:text="Distance"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:text="5 Miles"
                android:textColor="#888888" />
        </RelativeLayout>
        
    </LinearLayout>
    <ImageButton
            android:id="@+id/ibApply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:src="@drawable/apply_btn_big"
            android:textColor="#000" />
</RelativeLayout>
</LinearLayout>