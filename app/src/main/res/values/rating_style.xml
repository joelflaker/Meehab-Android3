<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customRatingBarSmall" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layer_list_small</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">14dp</item>
    </style>
    
     <style name="customRatingBarMedium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layer_list_medium</item>
        <item name="android:minHeight">15dp</item>
    </style>
     <style name="customRatingBarLightGrayMedium" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_light_gray_layer_list_medium</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <style name="customRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar_layer_list_big</item>
        <item name="android:minHeight">20dp</item>
    </style>

    <style name="PauseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="PauseDialogAnimationQuick">
        <item name="android:windowEnterAnimation">@anim/bottom_in_instant</item>
        <item name="android:windowExitAnimation">@anim/bottom_out_instant</item>
    </style>
    <style name="DialogAnimationFade">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="DialogAnimationShow">
        <item name="android:windowEnterAnimation">@anim/fade_in_slow</item>
        <item name="android:windowExitAnimation">@anim/fade_out_slow</item>
    </style>

</resources>